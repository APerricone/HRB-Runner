{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "harbour",
    "windows": {
        "command": "c:\\harbour\\bin\\win\\msvc64\\harbour.exe",
    },
    "problemMatcher": "$harbour",
    "options": {
        "cwd": "${fileDirname}"
    },
    "tasks": [
        {
            "label": "generate HRB",
            "type": "shell",
            "args": ["${fileBasename}","-gh", "-n0", "-Ic:\\harbour\\include"],
            "group": "build"
        },{
            "label": "generate Code",
            "type": "shell",
            "args": ["${fileBasename}","-gc2", "-n0", "-Ic:\\harbour\\include"],
            "group": "build"
        },{
            "label": "generate byte code",
            "type": "shell",
            "args": ["${fileBasename}","-gc0", "-n0", "-Ic:\\harbour\\include"],
            "group": "build"
        }
    ]
}